<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.banksoal.BankSoalFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Logo + Nama Sekolah -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/nmaSklh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lokasi"
                    android:textColor="@color/biru"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Garis -->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#2A6D7E" />

            <!-- Tambah Topik -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageButton
                    android:id="@+id/menu_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/add" />

                <TextView
                    android:id="@+id/tambahtopik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/topik"
                    android:textColor="@color/biru"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Dropdown Pilih Topik -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp">

                <AutoCompleteTextView
                    android:id="@+id/dropdownField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/select"
                    android:textColor="@color/biru"
                    android:background="@drawable/spinner_background" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Garis -->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#2A6D7E"
                android:layout_marginTop="8dp"/>

            <!-- Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/bab1"
                android:textSize="18sp"
                android:textColor="@color/biru"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="@string/soal"
                android:textSize="18sp"
                android:textColor="@color/biru"
                android:textStyle="bold" />

            <!-- RecyclerView tempat soal -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:clipToPadding="false" />

        </LinearLayout>
    </ScrollView>

    <!-- FloatingActionButton ini MELAYANG di atas ScrollView -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabTambahSoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/add"
        app:backgroundTint="@color/biru" />

</FrameLayout>
